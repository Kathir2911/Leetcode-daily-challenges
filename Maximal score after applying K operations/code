class Solution {
    public long maxKelements(int[] nums, int k) {
        PriorityQueue<Integer> pq = new PriorityQueue<>((a, b) -> b - a);
        
        for (int num : nums) {
            pq.offer(num);
        }
        
        long score = 0;
        
        for (int i = 0; i < k; i++) {
            int maxElement = pq.poll();
            score += maxElement;
            
            int newValue = (int) Math.ceil((double) maxElement / 3);
            pq.offer(newValue);
        }
        
        return score;
    }
}
